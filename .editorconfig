# EditorConfig
# It helps developers define and maintain consistent
# coding styles between different editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = tab
tab_width = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown override allow spaces at end of line
[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.php]
tab_width = 4

[*.yml]
indent_style = space
indent_size = 2

[*.svg]
insert_final_newline = false
